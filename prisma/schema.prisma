// ============================
//  DATASOURCE & GENERATOR
// ============================
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

// ============================
//  MODELS
// ============================

//  USERS
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  updatedAt DateTime? @map("updated_at")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  ownedTasks    Task[]   @relation("UserOwnedTasks")
  assignedTasks Task[]   @relation("UserAssignedTasks")

  @@map("users")
  @@index([username], name: "idx_users_username")
  @@index([email], name: "idx_users_email")
}

// TASKS
model Task {
  id          Int       @id @default(autoincrement())
  ownerId     Int       @map("owner_id")
  assignedId  Int?      @map("assigned_id")

  name        String
  description String?

  publishedAt DateTime? @map("published_at")
  deadlineAt  DateTime? @map("deadline_at")
  completedAt DateTime? @map("completed_at")
  updatedAt   DateTime? @map("updated_at")
  createdAt   DateTime  @default(now()) @map("created_at")

  // Relations
  owner    User   @relation("UserOwnedTasks", fields: [ownerId], references: [id], onDelete: Cascade)
  assigned User?  @relation("UserAssignedTasks", fields: [assignedId], references: [id], onDelete: SetNull)

  @@map("tasks")
  @@index([ownerId], name: "idx_tasks_owner_id")
  @@index([assignedId], name: "idx_tasks_assigned_id")
  @@index([deadlineAt], name: "idx_tasks_deadline")
}